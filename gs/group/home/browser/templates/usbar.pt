<div id="us-bar" class="ui-widget-header ui-corner-all">
  <h2>Us</h2>  
  <ul id="us-photos">
    <tal:block repeat="member view/postingMembers">
      <li>
        <a tal:attributes="title string:Posts by ${member/name};
          href string:/s?t=0&amp;p=1&amp;a=${member/id}&amp;g=${view/groupInfo/id}">
          <div tal:define="user member/user"
            tal:replace="structure provider:groupserver.UserImage"/>
        </a>
      </li>
    </tal:block>
  </ul>
  <div id="us-tasks">
    <ul id="us-member-tasks" tal:condition="view/isMember">
      <li>
        You are a <strong>member.</strong> You can 
        <a href="#"
          tal:attributes="href string:/groups/leave.html?groupId=${view/groupInfo/id}">leave</a>.</li>
    </ul><!--us-member-tasks-->
    <ul id="us-anon-tasks" tal:condition="view/isAnon">
      <li tal:condition="not:view/viewTopics">Already a member?
        <a tal:attributes="href string:login.html?came_from=${view/groupInfo/url}"
            href="#"><strong>Log in!<strong></a></li>
      <li tal:condition="view/viewTopics">
        <a tal:attributes="href string:/request_registration.html?form.groupId=${view/groupInfo/id}"
          href="#"><strong>Sign up</strong> to join!</a>
        (Already a member?
        <a tal:attributes="href string:login.html?came_from=${view/groupInfo/url}"
          href="#"><strong>Log in!<strong></a>)
      </li>
    </ul><!--us-anon-tasks-->
    <ul id="us-non-member-tasks"
      tal:condition="python:not(view.isMember or view.isAnon)">
      <li><a href="join.html">Join</a> and become a member!</li>
    </ul><!--us-non-member-tasks-->
  </div><!--us-tasks-->
</div><!--us-bar-->

