<html xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  metal:use-macro="context/@@groupserver_site_home_layout/page">
  <head>
    <title metal:fill-slot="title">
      <span tal:replace="string:${view/groupInfo/name} Home: ${view/siteInfo/name}"/>
    </title>
    <tal:block metal:fill-slot="style">
      <link rel="stylesheet" type="text/css" 
        href="/++resource++jquery-ui-1.8.5-css/ui-lightness/jquery-ui-1.8.5.custom.css" />
      <style type="text/css">
        .ui-tabs .ui-tabs-hide {
          display: none;
        }
      </style>
    </tal:block>
    <!--TODO: Metadata-->
  </head>
  <body>
    <tal:block metal:fill-slot="body">
      <h1><span class="fn" tal:content="view/groupInfo/name">Group</span>
        Home</h1>
      <p>
        <strong>Welcome!</strong>
      </p>
      <p 
        tal:replace="structure provider:groupserver.GroupHomepageInfoTabs">
        I am a fish
      </p>
      <p 
        tal:replace="structure provider:groupserver.GroupHomepageTaskTabs">
        I am a fish
      </p>
    </tal:block>
    <tal:block metal:fill-slot="javascript">
      <script src="/++resource++jquery-ui-1.7.2.custom.min.js" 
        type="text/javascript">&#160;</script>
      <script type="text/javascript">
        jQuery.noConflict()
        jQuery(document).ready( function () {
          jQuery("#info-tabs").tabs();
          jQuery("#task-tabs").tabs();
        });
      </script>        
    </tal:block>
  </body>
</html>

