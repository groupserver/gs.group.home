<html xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  metal:use-macro="context/@@groupserver_site_home_layout/page">
  <head>
    <title metal:fill-slot="title">
      <tal:block 
        replace="string:${view/groupInfo/name}: ${view/siteInfo/name}"/>
    </title>
    <!--TODO: Metadata-->
    <tal:block metal:fill-slot="metadata"
      replace="structure provider:groupserver.GroupHomepageMetadata">
      The metadata for the Group page.
    </tal:block>
  </head>
  <body>
    <ul metal:fill-slot="breadcrumb">
      <li><a tal:attributes="title string:${view/siteInfo/name} Homepage"
             href="/" title="Home">&#8962;</a></li>
      <li>
        <span class="group" 
              tal:content="view/groupInfo/name">This group</span>
      </li>
    </ul>
    <tal:block metal:fill-slot="body">
      <div class="gs-content-layout-cols">
        <div class="main">
          <h1 class="fn" tal:content="view/groupInfo/name">Group</h1>
          <p tal:replace="structure provider:groupserver.GroupHomepageMain">
            I am a fish.
          </p>
        </div><!--main-->
        <div class="secondary">
          I like to swim in the sea.
        </div><!--secondary-->
      </div><!--gs-content-layout-cols-->
    </tal:block>
    <tal:block metal:fill-slot="javascript">
      <tal:block
        replace="structure provider:groupserver.GroupHomepageScripts">
        The scripts required by the tabs.
      </tal:block>
    </tal:block>
  </body>
</html>

